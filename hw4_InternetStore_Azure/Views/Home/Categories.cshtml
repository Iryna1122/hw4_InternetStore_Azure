@model Category

    <h2>Add Category</h2>

<form method="post" action="AddCategory">
    <label for="Id">Id:</label>
    <input type="text" id="Id" asp-for="@Model.Id"><br>

    <label for="Name">Name:</label>
    <input type="text" id="Name" asp-for="@Model.CategoryName"><br>
   
    
    <button type="submit" class="btn btn-dark">Add Category</button>
</form>


<center><h1>Categories:</h1></center>


<table class="table table-success">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var cat in ViewBag.categories)
        {
            <tr>
                <td>@cat.Id</td>
                <td>@cat.CategoryName</td>
                
                @* <td><img src="@((ViewBag.photos as List<Photo>).Where(o=>o.ProductId==prod.Id).First().Path)" class="w-50" /></td>*@

                <td>
                    <form asp-action="DetailsCategory" method="GET" asp-route-id="@cat.Id">
                        <button class="btn btn-danger" type="submit">Info</button>
                    </form>
                </td>
                <td>
                    <form asp-action="EditCategory" method="GET" asp-route-id="@cat.Id">
                        <button class="btn alert-success" type="submit">Edit</button>
                    </form>
                </td>
                <td>
                    <form asp-action="DeleteCategory" method="POST" asp-route-id="@cat.Id">
                        <button class="btn btn- alert-warning" type="submit">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>


</table>

