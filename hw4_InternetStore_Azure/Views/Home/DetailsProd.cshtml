@{
}
@model Product

@if (Model != null)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>

            </tr>
        </thead>

        <tbody>


            <tr>
                <td>@Model.Id</td>
                <td>@Model.ProductName</td>
                <td>@Model.Description </td>
                <td>@Model.Price </td>
                <td>@ViewData["Categories"]</td>


            </tr>

        </tbody>


    </table>
}